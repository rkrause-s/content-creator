{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "paths": {
      "@pipeline/*": ["../src/pipeline/*"],
      "@generators/*": ["../src/generators/*"],
      "@image/*": ["../src/image/*"],
      "@export/*": ["../src/export/*"],
      "@brand/*": ["../src/brand/*"],
      "@shared/*": ["../src/shared/*"],
      "@claude/*": ["../src/claude/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
